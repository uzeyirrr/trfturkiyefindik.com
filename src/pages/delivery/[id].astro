---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { deliveries, auth } from "../../lib/pocketbase.js";

// URL'den teslimat ID'sini al
const { id } = Astro.params;

// Kullanıcının giriş yapmış olup olmadığını kontrol et
const currentUser = auth.getCurrentUser();

// Teslimat verilerini al
let delivery = null;
let error = null;

if (id) {
  try {
    const result = await deliveries.getById(id);
    if (result.success) {
      delivery = result.delivery;
    } else {
      error = result.error;
    }
  } catch (err) {
    error = 'Teslimat bulunamadı';
  }
}
---

<BaseLayout title="Teslimat Detayı">
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-2xl mx-auto px-4">
      {delivery ? (
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <!-- Header -->
          <div class="bg-gradient-to-r from-blue-600 to-purple-600 px-6 py-8 text-white text-center">
            <div class="w-16 h-16 bg-white bg-opacity-20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <h1 class="text-2xl font-bold mb-2">Teslimat Fişi</h1>
            <p class="text-blue-100">ID: {delivery.id.slice(-8)}</p>
          </div>

          <!-- Content -->
          <div class="p-6">
            <!-- Teslimat Bilgileri -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
              <div class="space-y-4">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-3">Teslimat Detayları</h3>
                  <div class="space-y-3">
                    <div class="flex justify-between">
                      <span class="text-gray-600">Teslimat ID:</span>
                      <span class="font-medium">{delivery.id.slice(-8)}</span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Tahmini Kilo:</span>
                      <span class="font-medium">{delivery.kg} kg</span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Teslimat Tarihi:</span>
                      <span class="font-medium">{new Date(delivery.teslimat_tarihi).toLocaleDateString('tr-TR')}</span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Oluşturulma Tarihi:</span>
                      <span class="font-medium">{new Date(delivery.created).toLocaleDateString('tr-TR')}</span>
                    </div>
                    {delivery.userDetails && (
                      <>
                        <div class="flex justify-between">
                          <span class="text-gray-600">Üretici:</span>
                          <span class="font-medium">{delivery.userDetails.name}</span>
                        </div>
                        <div class="flex justify-between">
                          <span class="text-gray-600">Şehir:</span>
                          <span class="font-medium">{delivery.userDetails.city}</span>
                        </div>
                      </>
                    )}
                  </div>
                </div>
              </div>

              <div class="space-y-4">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-3">Fiyat Bilgileri</h3>
                  <div class="space-y-3">
                    <div class="flex justify-between">
                      <span class="text-gray-600">Fiyat:</span>
                      <span class="font-medium text-green-600">₺{delivery.factory_price}/kg</span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Tahmini Toplam:</span>
                      <span class="font-medium text-green-600">₺{(delivery.kg * delivery.factory_price).toFixed(2)}</span>
                    </div>
                  </div>
                </div>

                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-3">Durum</h3>
                  <div class="space-y-3">
                    <div class="flex justify-between">
                      <span class="text-gray-600">Teslimat:</span>
                      <span class={`px-2 py-1 text-xs rounded-full ${
                        delivery.tamamlandi 
                          ? 'bg-green-100 text-green-800' 
                          : 'bg-yellow-100 text-yellow-800'
                      }`}>
                        {delivery.tamamlandi ? 'Tamamlandı' : 'Beklemede'}
                      </span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Ödeme:</span>
                      <span class={`px-2 py-1 text-xs rounded-full ${
                        delivery.odeme_tamamlandi 
                          ? 'bg-green-100 text-green-800' 
                          : 'bg-yellow-100 text-yellow-800'
                      }`}>
                        {delivery.odeme_tamamlandi ? 'Tamamlandı' : 'Beklemede'}
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Randiman Bilgisi -->
            {delivery.randiman > 0 && (
              <div class="bg-blue-50 rounded-lg p-4 mb-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Randiman Bilgisi</h3>
                <div class="flex justify-between">
                  <span class="text-gray-600">Gerçekleşen Randiman:</span>
                  <span class="font-medium text-blue-600">%{delivery.randiman}</span>
                </div>
              </div>
            )}

            <!-- Uyarı Mesajı -->
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-yellow-800">Önemli Bilgi</h3>
                  <div class="mt-2 text-sm text-yellow-700">
                    <p>Bu teslimat fişini fabrika yetkilisine gösterin. Teslimat tamamlandıktan sonra randiman bilgisi güncellenecektir.</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Buttons -->
            <div class="flex flex-col sm:flex-row gap-3">
              <button 
                onclick="window.print()"
                class="flex-1 px-4 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-all duration-200 flex items-center justify-center space-x-2"
              >
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                </svg>
                <span>Yazdır</span>
              </button>
              
              {currentUser && (
                <a 
                  href="/dashboard/deliveries"
                  class="flex-1 px-4 py-3 bg-gray-200 text-gray-800 font-medium rounded-lg hover:bg-gray-300 focus:ring-4 focus:ring-gray-200 transition-all duration-200 flex items-center justify-center space-x-2"
                >
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                  </svg>
                  <span>Dashboard'a Dön</span>
                </a>
              )}
            </div>
          </div>
        </div>
      ) : (
        <div class="bg-white rounded-xl shadow-lg p-8 text-center">
          <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-gray-900 mb-2">Teslimat Bulunamadı</h1>
          <p class="text-gray-600 mb-6">{error || 'Belirtilen ID ile teslimat bulunamadı.'}</p>
          <a 
            href="/"
            class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors"
          >
            Ana Sayfaya Dön
          </a>
        </div>
      )}
    </div>
  </div>
</BaseLayout>

<style>
  @media print {
    body * {
      visibility: hidden;
    }
    .bg-white, .bg-white * {
      visibility: visible;
    }
    .bg-white {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
    }
  }
</style>
